# GitHub OAuth App credentials
GITHUB_CLIENT_ID=your_client_id
GITHUB_CLIENT_SECRET=your_client_secret

# Session secret (generate a random string)
SESSION_SECRET=your_random_session_secret

# GitHub repository configuration
GITHUB_REPO_OWNER=Canadian-Open-Property-Association
GITHUB_REPO_NAME=governance
VCT_FOLDER_PATH=credentials/branding
SCHEMA_FOLDER_PATH=credentials/schemas
# Base branch for PRs (defaults to repo's default branch if not set)
GITHUB_BASE_BRANCH=feature/credential-display-standard

# Node environment
NODE_ENV=development

# Admin users (comma-separated GitHub usernames)
ADMIN_USERS=mathieuglaude

# PostgreSQL Database (required for Forms Builder and Proof Templates Builder)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://copa:dev_password@localhost:5432/copa_forms

# Orbit LOB (required for Test Issuer)
ORBIT_BASE_URL=https://your-orbit-instance.com
ORBIT_TENANT_ID=your-tenant-id
ORBIT_API_KEY=your-api-key
